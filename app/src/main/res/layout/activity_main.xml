<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gurpreet.businesscard.MainActivity">

    <ImageView
        android:src="@drawable/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:src="@drawable/guru"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:textSize="36sp"
        android:text="Gurpreet Grewal India"
        />

    <TextView
        android:id="@+id/passion"
        android:text="I am very passionate about Android."
        android:fontFamily="sans-serif-light"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am growing with Google"
        android:layout_below="@id/passion"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/grow"/>

    <TextView
        android:id="@+id/village"
        android:text="V.P.O. Kulrian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grow"
        android:textSize="20sp"
        android:fontFamily="cursive"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/mansa"
        android:text="District Mansa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/village"
        android:layout_marginLeft="100dp"
        android:fontFamily="cursive"
        android:textSize="20sp"
        />

    <TextView
        android:text="+918699131704"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mansa"
        android:layout_marginLeft="120dp"
        android:fontFamily="cursive"
        android:textSize="20sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:background="#BBDEFB"
        android:paddingLeft="160dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:textSize="30sp"/>

    <ImageView
        android:src="@drawable/andy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>
